# Enable mod_rewrite
RewriteEngine On

# Set default document
DirectoryIndex public/index.php

# Redirect all requests to public/index.php if not a file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php [L,QSA]

# Force HTTPS (optional, if your HelioHost supports it)
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Handle static assets paths
# If you put assets outside public/, adjust paths accordingly
# Example: allow direct access to /assets/css, /assets/js, /assets/img
RewriteCond %{REQUEST_URI} ^/assets/ [NC]
RewriteRule ^ - [L]
